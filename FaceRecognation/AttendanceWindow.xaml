<Window x:Class="FaceRecognation.AttendanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceRecognation"
        mc:Ignorable="d"
    Title="Attendance - Webcam"
    WindowState="Normal"
    Topmost="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="DarkSlateGray" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="HomeButton" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12,0,0,0" Width="120" Height="40" Click="HomeButton_Click"
                    Background="#FF4C6A" Foreground="White" FontWeight="Bold" Padding="8,4" ToolTip="Vá» trang chÃ­nh">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ " FontSize="16" Margin="0,0,8,0" />
                    <TextBlock Text="Home" FontWeight="Bold" VerticalAlignment="Center" />
                </StackPanel>
            </Button>

            <TextBlock Grid.Column="1" Grid.ColumnSpan="2" Text="Attendance" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Grid>

        <!-- Main -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Webcam area (left) -->
            <Grid Grid.Column="0">
                <Image x:Name="WebcamImage" Stretch="Fill" />
                <TextBlock x:Name="StatusText" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" FontWeight="Bold" FontSize="14" Foreground="White" Background="Black" Opacity="0.8" Padding="10"/>
                <ComboBox x:Name="DeviceComboBox" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" Width="250" Height="40" FontSize="14" SelectionChanged="DeviceComboBox_SelectionChanged" Background="White" Foreground="Black" VerticalContentAlignment="Center"/>
            </Grid>

            <!-- Right panel: staff selector + info + checkin/checkout buttons -->
            <Grid Grid.Column="1" Background="#F5F5F5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Info header -->
                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="12">
                    <TextBlock Text="Attendance (face-based)" FontWeight="Bold" Margin="0,0,0,6"/>
                    <TextBlock Text="Position your face in front of the camera and press Check In or Check Out." FontSize="12" Foreground="#444" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Info -->
                <ScrollViewer Grid.Row="1" Margin="12">
                    <TextBlock x:Name="RecognitionInfoText" FontSize="13" TextWrapping="Wrap" Foreground="#2C3E50" FontFamily="Segoe UI" LineHeight="20"></TextBlock>
                </ScrollViewer>

                <!-- Buttons at bottom -->
                <StackPanel Grid.Row="2" Orientation="Vertical" Margin="12" VerticalAlignment="Bottom">
                    <Button x:Name="CheckInButton" Content="âœ” Check In" Height="48" Background="#2ECC71" Foreground="White" FontWeight="Bold" Click="CheckInButton_Click"/>
                    <Button x:Name="CheckOutButton" Content="â¤µ Check Out" Height="48" Background="#E67E22" Foreground="White" FontWeight="Bold" Click="CheckOutButton_Click" Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
