<Window x:Class="FaceRecognation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceRecognation"
        mc:Ignorable="d"
    Title="Face Recognition - Webcam" 
    WindowState="Normal"
    Topmost="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header with controls -->
            <RowDefinition Height="*"/>      <!-- Main content area -->
        </Grid.RowDefinitions>
        
        <!-- Header Controls - Top (Near Camera) -->
        <Grid Grid.Row="0" 
              Background="DarkSlateGray" 
              Margin="0,0,0,0"
              Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>  <!-- Spacer left -->
                <ColumnDefinition Width="Auto"/> <!-- Recognition button center -->
                <ColumnDefinition Width="*"/>  <!-- Spacer right -->
                <ColumnDefinition Width="Auto"/> <!-- Exit button right -->
            </Grid.ColumnDefinitions>
            
        <!-- Home button on the left -->
            <Button x:Name="HomeButton" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12,0,0,0" Width="120" Height="40" Click="HomeButton_Click"
                    Background="#FF4C6A" Foreground="White" FontWeight="Bold" Padding="8,4" ToolTip="Về trang chính">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="🏠" FontSize="16" Margin="0,0,8,0" />
                    <TextBlock Text="Home" FontWeight="Bold" VerticalAlignment="Center" />
                </StackPanel>
            </Button>

        <!-- Recognition Button - Center (Near Camera) -->
        <Button x:Name="CaptureButton" Content="🔍 Recognize Face" 
            Grid.Column="1"
            Click="CaptureButton_Click" 
            Width="220" Height="50" Margin="10"
            Background="LightBlue"
            FontSize="16"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsEnabled="False"/>
            
            <!-- Native window chrome is used; custom window action buttons removed -->
        </Grid>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>  <!-- Webcam area -->
                <ColumnDefinition Width="1*"/>  <!-- Info area -->
            </Grid.ColumnDefinitions>
            
            <!-- Webcam Display Area - Left Side -->
            <Grid Grid.Column="0">
                <Image x:Name="WebcamImage" Stretch="Fill" />
                
                <!-- Status Text - Top Left -->
                <TextBlock x:Name="StatusText" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Top" 
                           Margin="20" 
                           FontWeight="Bold" FontSize="14"
                           Foreground="White"
                           Background="Black" 
                           Opacity="0.8"
                           Padding="10"/>
                
                <!-- Device Select - Top Center (On Webcam Frame) -->
                <ComboBox x:Name="DeviceComboBox" 
                          HorizontalAlignment="Right" 
                          VerticalAlignment="Top" 
                          Margin="0,20,20,0" 
                          Width="250" Height="40"
                          FontSize="14"
                          SelectionChanged="DeviceComboBox_SelectionChanged"
                          Background="White"
                          Foreground="Black" 
                          VerticalContentAlignment="Center"/>
            </Grid>
            
            <!-- Information Area - Right Side -->
            <Grid Grid.Column="1" Background="#F5F5F5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <!-- Header -->
                    <RowDefinition Height="*"/>      <!-- Content -->
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Grid Grid.Row="0" Background="#2C3E50" Height="50">
                    <TextBlock Text="Face Recognition Results" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"/>
                </Grid>
                
                <!-- Content Area -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto" 
                              Margin="15">
                    <TextBlock x:Name="RecognitionInfoText" 
                               FontSize="13" 
                               TextWrapping="Wrap"
                               HorizontalAlignment="Left"
                               Foreground="#2C3E50"
                               FontFamily="Segoe UI"
                               LineHeight="20"
                               Text="Click '🔍 Recognize Face' to start face recognition..."/>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>
