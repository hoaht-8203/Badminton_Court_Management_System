<Window x:Class="FaceRecognation.StaffSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Chọn nhân viên" Height="560" Width="880"
    WindowStartupLocation="CenterOwner"
    WindowState="Maximized"
    ResizeMode="CanResize"
        FontFamily="Segoe UI">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Navbar -->
        <Grid Grid.Row="0" Background="#2C3E50" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Chọn nhân viên" Foreground="White" FontSize="18" FontWeight="Bold"
                       VerticalAlignment="Center" Margin="20,0,0,0" />

            <!-- Use native window chrome; removed custom action buttons -->
        </Grid>

        <!-- Search bar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16" VerticalAlignment="Center">
            <TextBox x:Name="SearchTextBox" Width="360" Height="30" />
            <Button x:Name="SearchButton" Content="Tìm" Width="80" Height="30" Margin="8,0,0,0" Click="SearchButton_Click" />
            <TextBlock Text="Kích thước trang:" VerticalAlignment="Center" Margin="20,0,0,0" />
            <ComboBox x:Name="PageSizeComboBox" Width="80" Height="26" Margin="8,0,0,0" VerticalAlignment="Center" SelectionChanged="PageSizeComboBox_SelectionChanged">
                <ComboBoxItem Content="5" />
                <ComboBoxItem Content="10" IsSelected="True" />
                <ComboBoxItem Content="20" />
            </ComboBox>
        </StackPanel>

        <!-- Data grid -->
        <DataGrid x:Name="StaffDataGrid" Grid.Row="2" Margin="16" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" SelectionChanged="StaffDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" />
                <DataGridTextColumn Header="Họ và tên" Binding="{Binding FullName}" Width="*" />
                <DataGridTextColumn Header="SĐT" Binding="{Binding PhoneNumber}" Width="140" />
                <DataGridCheckBoxColumn Header="Hoạt động" Binding="{Binding IsActive}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pager and actions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="16">
            <Button x:Name="PrevPageButton" Content="« Trước" Width="100" Height="34" Margin="8" Click="PrevPageButton_Click" />
            <TextBlock x:Name="PageInfoText" VerticalAlignment="Center" Margin="8" FontWeight="SemiBold" />
            <Button x:Name="NextPageButton" Content="Sau »" Width="100" Height="34" Margin="8" Click="NextPageButton_Click" />
            <Button x:Name="ContinueButton" Content="Tiếp tục" Width="120" Height="34" Margin="12" Background="#4CAF50" Foreground="White" Click="ContinueButton_Click" IsEnabled="False" />
        </StackPanel>
    </Grid>
</Window>
